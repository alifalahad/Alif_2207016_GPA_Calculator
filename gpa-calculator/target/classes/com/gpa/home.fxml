<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.gpa.controller.HomeController" 
            styleClass="root">
    
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            
            <Label text="Welcome to GPA Calculator" styleClass="title-label">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
            
            <Label text="Calculate your Grade Point Average easily" styleClass="subtitle-label">
                <font>
                    <Font size="16"/>
                </font>
            </Label>
            
            <Label text="This application helps you track your courses and calculate your overall GPA." 
                   wrapText="true" maxWidth="400" textAlignment="CENTER" styleClass="description-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            
            <Button text="Start GPA Calculator" onAction="#handleStartButton" 
                    styleClass="primary-button" prefWidth="200" prefHeight="50">
                <font>
                    <Font name="System Bold" size="16"/>
                </font>
            </Button>
        </VBox>
    </center>
</BorderPane>
